<resources>

    <style name="AppZTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:statusBarColor">?android:attr/colorControlActivated</item>
        <item name="android:navigationBarColor">?attr/colorControlActivated</item>
    </style>

    <style name="CustomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppZTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:statusBarColor">?android:attr/colorControlActivated</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
 