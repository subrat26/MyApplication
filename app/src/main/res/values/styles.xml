<resources>

    <!-- Base application theme. -->
    <style name="AppZTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppZTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppZTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppZTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="CustomTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="CustomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
